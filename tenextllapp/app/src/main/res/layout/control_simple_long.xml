<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/card_simple_color"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/control_simple_r6">

        <ImageView
                android:id="@+id/iv_simple_long"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#0052D9"
                android:src="@mipmap/icon_control_timing_project"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_simple_long_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="颜色"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/ts_16"
                app:layout_constraintLeft_toRightOf="@+id/iv_simple_long"
                app:layout_constraintTop_toBottomOf="@+id/iv_simple_long"
                app:layout_constraintTop_toTopOf="@+id/iv_simple_long" />

        <TextView
                android:id="@+id/tv_simple_long_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="44dp"
                android:text="Green"
                android:textColor="@color/black_999999"
                android:textSize="@dimen/ts_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_simple_long"
                app:layout_constraintTop_toTopOf="@+id/iv_simple_long" />

        <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/icon_right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_simple_long"
                app:layout_constraintTop_toTopOf="@+id/iv_simple_long" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>