<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/outside_dialog_layout"
    android:background="@color/translucent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inside_layout"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_black_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_video_quality_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:textSize="@dimen/ts_14"
            android:background="@color/white_translucent_4DFFFFFF"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_video_quality_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_video_quality_low"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:textSize="@dimen/ts_14"
            android:background="@color/white_translucent_4DFFFFFF"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_video_quality_heigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_video_quality_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:textSize="@dimen/ts_14"
            android:background="@color/white_translucent_4DFFFFFF"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tip"
            app:layout_constraintStart_toStartOf="@id/tv_video_quality_low"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/ts_14"
            android:textColor="@color/white"
            android:text="@string/video_quality"
            app:layout_constraintBottom_toTopOf="@id/tv_video_quality_low"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
