<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_secretid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SecretId"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_secretid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:hint="请输入SecretId" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_secretkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SecretKey"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_secretkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:hint="请输入SecretKey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_productid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ProductId"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_productid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:hint="请输入ProductId" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_1_vedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="下一步"
        />

</LinearLayout>