<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tencent.iot.explorer.link.demo.core.activity.TimingProjectActivity">

    <include
        android:id="@+id/menu_timing_project"
        layout="@layout/menu_back_layout" />

    <TextView
        android:id="@+id/tv_add_timing_project"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text="添加"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/ts_18"
        app:layout_constraintBottom_toBottomOf="@+id/menu_timing_project"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_timing_project" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_timing_project"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_timing_project" />

    <TextView
        android:id="@+id/tv_empty_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="暂无数据"
        android:textColor="@color/black_999999"
        android:textSize="@dimen/ts_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>