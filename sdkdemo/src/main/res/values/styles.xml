<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_006EFF</item>
        <item name="colorPrimaryDark">@color/blue_006EFF</item>
        <item name="colorAccent">@color/blue_006EFF</item>
    </style>

    <style name="PopupWindowCamera" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/camera_in</item>
        <item name="android:windowExitAnimation">@anim/camera_out</item>
    </style>

    <style name="PopupWindowCommon" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/common_in</item>
        <item name="android:windowExitAnimation">@anim/common_out</item>
    </style>

    <style name="iOSDialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowBackground">@color/translucent</item>//背景
        <item name="android:windowIsFloating">true</item>//悬浮
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
