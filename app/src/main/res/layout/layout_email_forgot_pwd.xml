<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_forgot_email"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:text="@string/email"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_16"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/et_forgot_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_forgot_email" />


    <com.tencent.iot.explorer.link.customview.check.VerifyEdit
        android:id="@+id/et_forgot_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/edit_blue_cursor"
        android:textSize="@dimen/ts_16"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_forgot_email_clear"
        app:layout_constraintStart_toEndOf="@+id/tv_forgot_email" />

    <ImageView
            android:id="@+id/iv_forgot_email_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:padding="3dp"
            android:src="@mipmap/icon_clear"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_forgot_email"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_forgot_email" />

    <View
            android:id="@+id/line_forgot_email"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray_dddddd"
            app:layout_constraintTop_toBottomOf="@id/et_forgot_email" />

    <TextView
            android:id="@+id/tv_forgot_email_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_eb3d3d"
            android:textSize="@dimen/ts_10"
            app:layout_constraintLeft_toLeftOf="@+id/line_forgot_email"
            app:layout_constraintTop_toBottomOf="@+id/line_forgot_email" />

    <TextView
            android:id="@+id/tv_forgot_to_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_forgot"
            android:textColor="@color/blue_006EFF"
            android:textSize="@dimen/ts_14"
            android:layout_marginStart="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_forgot_email_hint"/>

</androidx.constraintlayout.widget.ConstraintLayout>