<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_forgot_to_country_tip"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:text="@string/country_or_place"
        android:textColor="@color/black_15161A"
        android:textSize="@dimen/ts_14"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/tv_forgot_to_country"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_forgot_to_country" />

    <TextView
        android:id="@+id/tv_forgot_to_country"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/default_country"
        android:textColor="@color/black_15161A"
        android:textSize="@dimen/ts_14"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_forgot_to_country"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_forgot_to_country_tip"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/iv_forgot_to_country"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="3dp"
            android:rotation="180"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/icon_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/tv_forgot_to_country"
            app:layout_constraintTop_toTopOf="@id/tv_forgot_to_country" />

    <View
        android:id="@+id/line_forgot_to_country"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="134dp"
        android:background="@color/gray_E7E8EB"
        app:layout_constraintBottom_toBottomOf="@id/tv_forgot_to_country" />

    <TextView
        android:id="@+id/tv_forgot_phone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:text="@string/mobile_num"
        android:textColor="@color/black_15161A"
        android:textSize="@dimen/ts_14"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/et_forgot_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_forgot_phone" />


    <com.tencent.iot.explorer.link.customview.check.VerifyEdit
        android:id="@+id/et_forgot_phone"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:hint="@string/mobile_number"
        android:inputType="phone"
        android:textColor="@color/black_15161A"
        android:textCursorDrawable="@drawable/edit_blue_cursor"
        android:textSize="@dimen/ts_14"
        app:layout_constraintBottom_toBottomOf="@+id/line_forgot_phone"
        app:layout_constraintEnd_toStartOf="@+id/iv_forgot_phone_clear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_forgot_phone_clear"
        app:layout_constraintStart_toStartOf="@+id/tv_forgot_to_country" />

    <ImageView
            android:id="@+id/iv_forgot_phone_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:padding="3dp"
            android:src="@mipmap/icon_clear"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_forgot_phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_forgot_phone" />

    <View
            android:id="@+id/line_forgot_phone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="49dp"
            android:background="@color/gray_E7E8EB"
            app:layout_constraintTop_toBottomOf="@id/line_forgot_to_country" />

    <TextView
            android:id="@+id/tv_forgot_phone_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_eb3d3d"
            android:textSize="@dimen/ts_12"
            app:layout_constraintLeft_toLeftOf="@+id/et_forgot_phone"
            app:layout_constraintTop_toBottomOf="@+id/line_forgot_phone" />

    <TextView
            android:id="@+id/tv_forgot_to_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_forgot"
            android:textColor="@color/blue_006EFF"
            android:textSize="@dimen/ts_14"
            android:layout_marginStart="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_forgot_phone_hint"
            app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>