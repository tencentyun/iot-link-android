<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/control_dark_r6">
    
    <ImageView
            android:id="@+id/iv_dark_medium"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

    <TextView
            android:id="@+id/tv_dark_medium_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/power_switch"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_dark_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/ts_16"
            android:textColor="@color/white"/>

    <TextView
            android:id="@+id/tv_dark_medium_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dark_medium_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/ts_16"
            android:textColor="@color/white"/>

    <ImageView
            android:id="@+id/iv_dark_medium_next"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_dark_medium_value"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dark_medium_value"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/icon_right"/>

    <Switch
            android:id="@+id/dark_medium_switch"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:checked="false"
            android:visibility="gone"
            android:layout_marginEnd="16dp"
            android:textColor="@color/white"
            android:thumb="@drawable/selector_switch_thumb"
            android:track="@drawable/selector_switch_track"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dark_medium_name" />

</androidx.constraintlayout.widget.ConstraintLayout>