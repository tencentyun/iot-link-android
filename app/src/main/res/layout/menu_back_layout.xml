<?xml version="1.0" encoding="utf-8"?>
<com.tencent.iot.explorer.link.kitlink.util.StatusBarHeightView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        app:use_type="use_padding_top">

    <ImageView
            android:id="@+id/iv_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@mipmap/icon_back_black" />

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="@string/title_name"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_20" />

    <ImageView
        android:id="@+id/iv_right_btn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:visibility="invisible"
        android:padding="10dp"
        />

</com.tencent.iot.explorer.link.kitlink.util.StatusBarHeightView>