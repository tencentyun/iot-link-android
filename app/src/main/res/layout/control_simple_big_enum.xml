<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tv_simple_big_enum_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:text="颜色"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_20" />

    <TextView
            android:id="@+id/tv_simple_big_enum_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="红色"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_36" />

    <com.tencent.iot.explorer.link.customview.recyclerview.CRecyclerView
            android:id="@+id/crv_simple_big_enum"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="34dp"
            android:layout_height="0dp" />

</LinearLayout>