<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/control_standard_r6">

    <ImageView
            android:id="@+id/iv_standard_long_switch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:tint="@color/white"
            android:src="@mipmap/icon_control_switch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_standard_long_switch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/power_switch"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_16"
            app:layout_constraintLeft_toRightOf="@+id/iv_standard_long_switch"
            app:layout_constraintTop_toBottomOf="@+id/iv_standard_long_switch"
            app:layout_constraintTop_toTopOf="@+id/iv_standard_long_switch" />

    <Switch
            android:id="@+id/standard_long_switch"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:checked="false"
            android:layout_marginEnd="16dp"
            android:textColor="@color/white"
            android:thumb="@drawable/selector_switch_thumb"
            android:track="@drawable/selector_switch_track"
            app:layout_constraintBottom_toBottomOf="@+id/iv_standard_long_switch"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_standard_long_switch" />

</androidx.constraintlayout.widget.ConstraintLayout>