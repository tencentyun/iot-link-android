<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <View
            android:id="@+id/family_list_top_space"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_family_name"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/my_family"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/family_list_top_space" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/icon_arrow"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/tv_family_name"
        app:layout_constraintRight_toRightOf="@+id/tv_family_name"
        app:layout_constraintTop_toTopOf="@+id/tv_family_name" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray_F5F5F5"
            app:layout_constraintBottom_toBottomOf="@+id/tv_family_name" />

</androidx.constraintlayout.widget.ConstraintLayout>