<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/device_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_F5F5F5"
        tools:context=".kitlink.activity.DeviceDetailsActivity">

    <!--    返回键-->
    <include android:id="@+id/menu_device_detail"
            layout="@layout/menu_back_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_dev_detail"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/menu_device_detail"
        >

    <TextView
            android:id="@+id/tv_device_alias_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/device_name"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_device_alias_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="48dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/gray_cccccc"
            android:textSize="@dimen/ts_16"
            app:layout_constraintBottom_toBottomOf="@+id/tv_device_alias_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_device_alias_title" />

    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/icon_arrow"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/tv_device_alias_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_device_alias_title" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray_F2F4F5"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_alias_title" />

    <TextView
            android:id="@+id/tv_device_info_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/device_info"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_alias_title" />


    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/icon_arrow"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/tv_device_info_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_device_info_title" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray_F2F4F5"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_info_title" />


    <TextView
            android:id="@+id/tv_device_room_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/room_setting"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_info_title" />


    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/icon_arrow"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/tv_device_room_setting"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_device_room_setting" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:background="@color/gray_F2F4F5"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_room_setting" />

    <TextView
            android:id="@+id/tv_device_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/device_share"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_room_setting" />


    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/icon_arrow"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@+id/tv_device_share"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_device_share" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/tv_device_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:background="@drawable/background_white_btn_cell"
            android:gravity="center"
            android:text="@string/delete_dev"
            android:textColor="@color/red_E65A59"
            android:textSize="@dimen/ts_18"
            app:layout_constraintTop_toBottomOf="@+id/layout_dev_detail" />

    <View
            android:id="@+id/device_detail_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@color/black"
            android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>