<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tencent.iot.explorer.link.customview.image.RoundImageView
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/gray_e1e2e5"
        android:id="@+id/iv_option_background"
        android:layout_marginTop="44dp"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="@id/iv_option_background"
        app:layout_constraintEnd_toEndOf="@id/iv_option_background"
        app:layout_constraintTop_toTopOf="@id/iv_option_background"
        app:layout_constraintBottom_toBottomOf="@id/iv_option_background"
        android:id="@+id/iv_option"
        />

    <TextView
        android:id="@+id/tv_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_15161A"
        android:textSize="@dimen/ts_14"
        android:singleLine="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_option_background" />

    <TextView
        android:id="@+id/tv_option_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray_A1A7B2"
        android:textSize="@dimen/ts_12"
        android:singleLine="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_option" />

</androidx.constraintlayout.widget.ConstraintLayout>