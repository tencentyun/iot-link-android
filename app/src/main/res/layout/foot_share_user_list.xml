<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_item_share_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/background_white_btn_cell"
            android:gravity="center"
            android:text="@string/add_device_share"
            android:textColor="@color/complete_progress"
            android:textSize="@dimen/ts_16"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/item_share_user_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_share_add" />

</androidx.constraintlayout.widget.ConstraintLayout>