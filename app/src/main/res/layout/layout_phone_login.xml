<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <com.tencent.iot.explorer.link.customview.check.VerifyEdit
            android:id="@+id/et_login_phone"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textCursorDrawable="@drawable/edit_blue_cursor"
            android:background="@drawable/bg_edit"
            android:ellipsize="end"
            android:hint="@string/mobile_number"
            android:inputType="phone"
            android:textColorHint="@color/gray_cccccc"
            android:maxLines="1"
            android:paddingStart="70dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_16"
            app:layout_constraintBottom_toBottomOf="@+id/tv_login_to_country"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_login_to_country" />

    <TextView
            android:id="@+id/tv_login_to_country"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/blue_0052d9"
            android:textSize="@dimen/ts_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/iv_login_phone_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:src="@mipmap/icon_clear"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_login_phone"
            app:layout_constraintRight_toRightOf="@+id/et_login_phone"
            app:layout_constraintTop_toTopOf="@id/et_login_phone" />

    <TextView
            android:id="@+id/tv_login_phone_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_eb3d3d"
            android:textSize="@dimen/ts_10"
            app:layout_constraintLeft_toLeftOf="@+id/tv_login_to_country"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_to_country" />

    <com.tencent.iot.explorer.link.customview.check.VerifyEdit
            android:id="@+id/et_login_pwd"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textCursorDrawable="@drawable/edit_blue_cursor"
            android:layout_marginEnd="30dp"
            android:paddingStart="16dp"
            android:paddingEnd="40dp"
            android:textColorHint="@color/gray_cccccc"
            android:background="@drawable/bg_edit"
            android:hint="@string/password"
            android:maxLines="1"
            android:inputType="textPassword"
            android:maxLength="@integer/password_max_length"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_to_country" />

    <ImageView
            android:id="@+id/iv_login_pwd_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:src="@mipmap/icon_clear"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_login_pwd"
            app:layout_constraintRight_toLeftOf="@+id/iv_login_show_pwd"
            app:layout_constraintTop_toTopOf="@id/et_login_pwd" />

    <ImageView
            android:id="@+id/iv_login_show_pwd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/icon_invisible"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/et_login_pwd"
            app:layout_constraintRight_toRightOf="@+id/et_login_pwd"
            app:layout_constraintTop_toTopOf="@id/et_login_pwd" />

    <TextView
            android:id="@+id/tv_login_pwd_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_eb3d3d"
            android:textSize="@dimen/ts_10"
            app:layout_constraintLeft_toLeftOf="@+id/et_login_pwd"
            app:layout_constraintTop_toBottomOf="@+id/et_login_pwd" />

    <TextView
            android:id="@+id/tv_login_tab_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/email_login"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/ts_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_login_pwd" />

    <TextView
            android:id="@+id/tv_login_to_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/forgot_password"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/ts_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_login_pwd" />

</androidx.constraintlayout.widget.ConstraintLayout>