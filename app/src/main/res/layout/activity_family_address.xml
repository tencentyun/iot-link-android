<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".kitlink.activity.FamilyAddressActivity">

    <include
            android:id="@+id/menu_family_address"
            layout="@layout/menu_back_layout" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_family_address"
        app:layout_constraintBottom_toBottomOf="parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:minHeight="180dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <com.tencent.tencentmap.mapsdk.map.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <ImageView
                    android:id="@+id/iv_reset_loaction"
                    android:layout_width="39dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="h,1:1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/relocate"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:paddingTop="18dp"
            android:paddingBottom="6dp"
            android:background="@drawable/background_white_top_radius_cell">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_seach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_grey_f3f3f5_cell"
                android:layout_marginLeft="16dp"
                android:visibility="gone"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/iv_seach"
                    android:layout_width="13dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="18dp"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ev_search"
                    app:layout_constraintBottom_toBottomOf="@id/ev_search"
                    android:src="@mipmap/map_search"
                    />

                <TextView
                    android:id="@+id/ev_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_seach"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:hint="@string/seach_postion"
                    android:textSize="@dimen/ts_14"
                    android:background="@null"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:textColorHint="@color/gray_A1A7B2"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true"
            android:paddingBottom="56dp">

            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/smart_refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_pos"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/family_address_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" >

    <TextView
        android:id="@+id/btn_add_family"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_circle_bule_gradient"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_16"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/family_address_bg"
        app:layout_constraintTop_toTopOf="@+id/family_address_bg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>