<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tencent.iot.explorer.link.customview.image.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h, 3:1.3"
        android:id="@+id/iv_pic_background"
        app:riv_corner_radius="5dp"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:background="@drawable/background_bule_cell"
        android:visibility="invisible"
        />

    <com.tencent.iot.explorer.link.customview.image.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_pic_background"
        app:layout_constraintBottom_toBottomOf="@id/iv_pic_background"
        app:layout_constraintStart_toStartOf="@id/iv_pic_background"
        app:layout_constraintEnd_toEndOf="@id/iv_pic_background"
        app:layout_constraintDimensionRatio="h, 3:1.3"
        android:id="@+id/iv_pic"
        app:riv_corner_radius="5dp"
        android:scaleType="fitXY"
        android:padding="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
