<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="tab_height" format="dimension"/>
    <declare-styleable name="TabLine">
        <attr name="tab_line_color" format="color" />
        <attr name="tab_src" format="reference" />
        <attr name="tab_line_height" format="dimension" />
        <attr name="tab_width" format="dimension"/>
        <attr name="tab_line_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="tab_height" />
        <attr name="tab_count" format="integer" />
        <attr name="tab_padding_start" format="dimension" />
        <attr name="tab_padding_end" format="dimension" />
        <attr name="tab_round" format="boolean" />
        <attr name="tab_smooth_scroll" format="boolean" />
    </declare-styleable>
    <declare-styleable name="VerticalTabLayout">
        <attr name="indicator_color" format="color" />
        <attr name="indicator_width" format="dimension" />
        <attr name="indicator_corners" format="dimension" />
        <attr name="indicator_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="fill" value="2" />
        </attr>
        <attr name="tab_margin" format="dimension" />
        <attr name="tab_mode" format="enum">
            <enum name="fixed" value="10" />
            <enum name="scrollable" value="11" />
        </attr>
        <attr name="tab_height" />
    </declare-styleable>
</resources>