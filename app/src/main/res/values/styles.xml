<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PopupWindowCamera" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/camera_in</item>
        <item name="android:windowExitAnimation">@anim/camera_out</item>
    </style>

    <style name="PopupWindowFamily" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/family_in</item>
        <item name="android:windowExitAnimation">@anim/family_out</item>
    </style>

    <style name="PopupWindowCommon" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/common_in</item>
        <item name="android:windowExitAnimation">@anim/common_out</item>
    </style>

    <!--picture start-->
    <!-- 图片浏览器选择文件夹popup的弹出动画 -->
    <style name="imageselector_popup_animation_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/imageselector_popup_push_in</item>
        <item name="android:windowExitAnimation">@anim/imageselector_popup_push_out</item>
    </style>

    <!-- 状态栏 -->
    <style name="MyToolBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>
    <!--picture end-->

    <style name="iOSDialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowBackground">@color/btn_normal</item>//背景
        <item name="android:windowIsFloating">true</item>//悬浮
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>


</resources>
